<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    tools:context=".Inicio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="393dp"
        android:layout_height="85dp"
        android:background="#FFBD59  "
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="86dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/logopetit"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/casa2icon"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="5dp" />

    <EditText
        android:id="@+id/editText_remitente_telefono"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Teléfono*"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="596dp" />

    <Button
        android:id="@+id/btn_remitente_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="686dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="334dp" />

    <EditText
        android:id="@+id/editText_remitente_CP"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Código postal*"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="374dp" />

    <EditText
        android:id="@+id/editText_remitente_apellido1"
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Primer apellido*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localidad"
        android:textColor="#A9A9A9"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/textView_remitente_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remitente"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de contacto"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="496dp" />

    <Spinner
        android:id="@+id/spinner_remitente_localidad"
        android:layout_width="167dp"
        android:layout_height="38dp"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="374dp" />

    <EditText
        android:id="@+id/editText_remitente_nombre"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/textView_remitente_datosPersonales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos personales"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="167dp" />

    <EditText
        android:id="@+id/editText_remitente_direccion"
        android:layout_width="356dp"
        android:layout_height="37dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="434dp" />

    <EditText
        android:id="@+id/editText_remitente_apellido2"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Segundo apellido"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="271dp" />

    <EditText
        android:id="@+id/editText_remitente_email"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="537dp" />

</androidx.constraintlayout.widget.ConstraintLayout>