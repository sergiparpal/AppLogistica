<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    tools:context=".Inicio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="412dp"
        android:layout_height="84dp"
        android:background="#FFBD59  "
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/logopetit"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="74dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/casa2icon"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView_remitente_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remitente"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_remitente_datosPersonales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Localidad"
        android:textColor="#A9A9A9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_remitente_apellido2" />

    <TextView
        android:id="@+id/textView_remitente_datosPersonales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Datos personales"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_remitente_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_remitente_direccion"
        android:layout_width="356dp"
        android:layout_height="37dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_remitente_CP"
        app:layout_constraintVertical_bias="0.362" />

    <EditText
        android:id="@+id/editText_remitente_email"
        android:layout_width="357dp"
        android:layout_height="41dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="601dp" />

    <EditText
        android:id="@+id/editText_remitente_telefono"
        android:layout_width="356dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Teléfono*"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_remitente_continuar"
        app:layout_constraintTop_toBottomOf="@+id/editText_remitente_email"
        app:layout_constraintVertical_bias="0.347"
        tools:layout_editor_absoluteX="26dp" />

    <Button
        android:id="@+id/btn_remitente_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Datos de contacto"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_remitente_email"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Dirección"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_remitente_apellido1" />

    <EditText
        android:id="@+id/editText_remitente_apellido2"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Segundo apellido"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/spinner_remitente_localidad"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_remitente_direccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_remitente_apellido2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_remitente_CP"
        android:layout_width="170dp"
        android:layout_height="37dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Código postal*"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/spinner_remitente_localidad"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_remitente_apellido1" />

    <EditText
        android:id="@+id/editText_remitente_apellido1"
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Primer apellido*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/editText_remitente_apellido2"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editText_remitente_nombre"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_marginTop="237dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_remitente_apellido1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>