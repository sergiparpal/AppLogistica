<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    tools:context=".Inicio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="76dp"
        android:background="#FFBD59  "
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/logopetit"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/casa2icon"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Remitente"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:layout_editor_absoluteX="151dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:text="Datos personales"
        android:textColor="#A9A9A9"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="Dirección"
        android:textColor="#A9A9A9"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <CheckBox
        android:id="@+id/checkBox_recogida_misma"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:gravity="top"
        android:text="La dirección de recogida es la misma que la dirección del remitente"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="491dp" />

    <Spinner
        android:id="@+id/spinner_remitente_localidad"
        android:layout_width="186dp"
        android:layout_height="43dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="207dp" />

    <EditText
        android:id="@+id/editText_remitente_CP"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Código postal*"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/editText_remitente_direccion"
        android:layout_width="374dp"
        android:layout_height="42dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:text="Localidad"
        android:textColor="#A9A9A9"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="341dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="556dp"
        android:text="Datos de contacto"
        android:textColor="#A9A9A9"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/editText_remitente_email"
        android:layout_width="374dp"
        android:layout_height="43dp"
        android:layout_marginTop="596dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/editText_remitente_telefono"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <EditText
        android:id="@+id/editText_remitente_apellido1"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Primer apellido*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="18dp" />

    <EditText
        android:id="@+id/editText_remitente_nombre"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:layout_editor_absoluteX="18dp" />

    <EditText
        android:id="@+id/editText_remitente_apellido2"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Segundo apellido"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="206dp" />

    <Button
        android:id="@+id/button_remitente_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="148dp" />

</androidx.constraintlayout.widget.ConstraintLayout>