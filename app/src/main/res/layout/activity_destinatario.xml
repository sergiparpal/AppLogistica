<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destinatario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    tools:context=".Destinatario">

    <Button
        android:id="@+id/button2d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="414dp"
        android:layout_height="0dp"
        android:background="#FFBD59"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="249dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopetit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/casa2icon" />

    <EditText
        android:id="@+id/editText_destinatario_nombre"
        android:layout_width="361dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_destinatario_apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText_destinatario_apellido"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Primer Apellido*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_destinatario_2oApellido"
        app:layout_constraintEnd_toStartOf="@+id/editText_destinatario_2oApellido"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="14dp"
        android:text="¿Dónde quieres que lo enviemos?"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_destinatario_codigoPostal"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_destinatario_telefono"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Teléfono*"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button2d"
        app:layout_constraintEnd_toEndOf="@+id/button2d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="300dp"
        android:text="Datos de contacto"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_destinatario_email"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="e-mail*"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_destinatario_telefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editText_destinatario_direccion"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección*"
        android:inputType="textPostalAddress"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_destinatario_codigoPostal" />

    <EditText
        android:id="@+id/editText_destinatario_codigoPostal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Código Postal*"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_destinatario_localidad"
        app:layout_constraintEnd_toStartOf="@+id/spinner_destinatario_localidad"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/spinner_destinatario_localidad" />

    <Spinner
        android:id="@+id/spinner_destinatario_localidad"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:spinnerMode="dropdown"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/editText_destinatario_apellido" />

    <EditText
        android:id="@+id/editText_destinatario_2oApellido"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Segundo Apellido"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_destinatario_apellido"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Destinatario"
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="39dp"
        android:text="Datos personales"
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localidad"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        app:layout_constraintBottom_toTopOf="@+id/spinner_destinatario_localidad"
        app:layout_constraintEnd_toEndOf="@+id/spinner_destinatario_localidad" />

</androidx.constraintlayout.widget.ConstraintLayout>