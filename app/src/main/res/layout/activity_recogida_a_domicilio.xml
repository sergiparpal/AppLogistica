<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recogidadomicilio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    tools:context=".RecogidaADomicilio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="412dp"
        android:layout_height="81dp"
        android:background="#FFBD59"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="78dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/perfil_del_usuariopetit"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="6dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logopetit"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/editText_recogida_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Recogida a Domicilio"
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:layout_editor_absoluteX="93dp" />

    <TextView
        android:id="@+id/textView_recogida_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:text="Dirección"
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <EditText
        android:id="@+id/editText_recogida_codigoPostal"
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Código Postal*"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <EditText
        android:id="@+id/editText_recogida_direccion"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/textView_recogida_indicacion"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginTop="464dp"
        android:text="¿Tienes alguna indicación para nuestro repartidor?"
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <EditText
        android:id="@+id/editText_recogida_indicacion"
        android:layout_width="319dp"
        android:layout_height="101dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/textView_recogida_localidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="Localidad"
        android:textColor="#A9A9A9"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="306dp" />

    <Spinner
        android:id="@+id/spinner_recogida_localidad"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="197dp" />

    <Button
        android:id="@+id/button_recogida_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="148dp" />

</androidx.constraintlayout.widget.ConstraintLayout>