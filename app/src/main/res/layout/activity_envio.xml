<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/envio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044aad "
    android:orientation="vertical"
    tools:context=".Envio">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="72dp"
        android:background="#FFBD59  "
        android:isScrollContainer="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logopetit"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/casa2icon"
            tools:layout_editor_absoluteX="333dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView_envio_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu envío"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_envio_resumen"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="160dp" />

    <TextView
        android:id="@+id/textView_envio_resumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen y pago"
        android:textColor="#A9A9A9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/textView_envio_remitente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Remitente"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_envio_resumen" />

    <EditText
        android:id="@+id/editText_envio_remitDirRecog"
        android:layout_width="362dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección de recogida*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_remitNombre" />

    <EditText
        android:id="@+id/editText_envio_remitNombre"
        android:layout_width="362dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_envio_remitente" />

    <TextView
        android:id="@+id/textView_envio_destinatario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Destinatario"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_envio_remitDirRecog" />

    <EditText
        android:id="@+id/editText_envio_destNombre"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Nombre*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_envio_destinatario" />

    <TextView
        android:id="@+id/textView_envio_tamano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Tamaño"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_envio_anchura"
        app:layout_constraintEnd_toStartOf="@+id/textView_envio_centim"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_destDirEnv"
        app:layout_constraintVertical_bias="0.809" />

    <TextView
        android:id="@+id/textView_envio_resumenProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Resumen de producto"
        android:textColor="#A9A9A9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_destDirEnv" />

    <TextView
        android:id="@+id/textView_envio_tipoDeProud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tipo de producto"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView_envio_resumenProducto"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/editText_envio_anchura"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_destDirEnv" />

    <EditText
        android:id="@+id/editText_envio_tipoDeProd"
        android:layout_width="186dp"
        android:layout_height="122dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_envio_anchura"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_envio_tipoDeProud"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_envio_anchura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Anchura (lado más largo)"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_envio_altura"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_anchura"
        app:layout_constraintVertical_bias="0.583"
        tools:layout_editor_absoluteX="229dp" />

    <TextView
        android:id="@+id/textView_envio_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Altura"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_envio_continuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_altura"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_envio_altura"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editText_envio_tipoDeProd"
        tools:layout_editor_absoluteY="673dp" />

    <EditText
        android:id="@+id/editText_envio_destDirEnv"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Dirección de envío*"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#A9A9A9"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_destNombre" />

    <TextView
        android:id="@+id/textView_envio_centim"
        android:layout_width="89dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:text="(centímetros)"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_envio_anchura"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_destDirEnv"
        app:layout_constraintVertical_bias="0.235"
        tools:layout_editor_absoluteX="292dp" />

    <Button
        android:id="@+id/btn_envio_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFBD59"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_envio_tipoDeProd"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
